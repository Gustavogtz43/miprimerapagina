---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
// Estado de menú con JavaScript
let isOpen = false;

function toggleMenu() {
  isOpen = !isOpen;
  const menu = document.getElementById("mobile-menu");
  if (menu) {
    menu.style.display = isOpen ? "block" : "none";
  }
}
