      transform: translateY(50px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

    .fade-in.show {
      opacity: 1;
      transform: translateY(0);
    }

						@keyframes move1 {
			  0%, 100% { transform: translateY(0); }
			  50% { transform: translateY(30px); }
			}
		  
			@keyframes move2 {
			  0%, 100% { transform: translateX(-50%); }
			  50% { transform: translateX(-40%) translateY(-20px); }
			}
		  
			@keyframes move3 {
			  0%, 100% { transform: translateY(0) translateX(0); }
			  50% { transform: translateY(-30px) translateX(20px); }
			}
		  
			/* 📌 Ajustes especiales para móviles */
			@media (max-width: 640px) {
			  /* Reducimos el tamaño de los círculos */
			  .animate-move1 { animation: move1 6s ease-in-out infinite; }
			  .animate-move2 { animation: move2 5s ease-in-out infinite; }
			  .animate-move3 { animation: move3 7s ease-in-out infinite; }
		  
			  /* Ajuste en tamaño de círculos */
			  .w-[600px] { width: 400px; height: 400px; }
			  .w-[500px] { width: 300px; height: 300px; }
			  .w-[700px] { width: 400px; height: 400px; }
			}

			@keyframes scroll {
			  0% { transform: translateX(0); }
			  100% { transform: translateX(-50%); }
			}
		  
			.animate-scroll {
			  display: flex;
			  animation: scroll 12s linear infinite;
			}
		  
			/* 🚀 Mejora responsive: pausa el scroll en desktop al pasar el mouse */
			@media (hover: hover) {
			  .animate-scroll:hover {
				animation-play-state: paused;
			  }
			}
		  
			/* Ajuste de velocidad para pantallas pequeñas */
			@media (max-width: 640px) {
			  .animate-scroll {
				animation-duration: 10s; /* Más lento en móviles */
			  }
			}
